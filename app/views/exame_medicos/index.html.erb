<p id="notice"><%= notice %></p>
<header>
<h1 align="center">Exames Médicos</h1>
</header>
<table align="center">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Tipo</th>
      <th>Status</th>
      <th>Laboratório</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exame_medicos.each do |exame_medico| %>
      <tr>
        <td><%= exame_medico.nome %></td>
        <td><%= exame_medico.tipo %></td>
        <td><%= humanize_boolean(exame_medico.status) %></td>
        <td><%= exame_medico.laboratorio.nome%></td>
        <td><%= link_to 'Mostrar', exame_medico %></td>
        <td><%= link_to 'Editar', edit_exame_medico_path(exame_medico) %></td>
        <td><%= link_to 'Deletar', exame_medico, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3 align="center"><%= link_to 'Novo Exame Medico', new_exame_medico_path %></h3>
<h3 align="center"><%= link_to 'Página Inicial', welcome_index_path  %></h3>
